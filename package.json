{
  "name": "django-cookie-monster",
  "version": "1.0.0",
  "description": "============================= django-cookie-monster =============================",
  "main": "./cookie_monster/static/cookie-monster.umd.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "build": "npm run build-js && npm run build-css",
    "build-js": "rollup -c",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "cov-html": "nyc report --reporter=html",
    "watch-js": "npm run build-js -- -w",
    "lint-js": "eslint src --ext js --ext svelte",
    "build-css": "postcss src/themes --ext css --dir cookie_monster/static",
    "watch-css": "npm run build-css -- -w",
    "lint-css": "stylelint src/themes",
    "lint": "npm run lint-js && npm run lint-css",
    "pretest": "npm run build",
    "test": "mocha -r esm -r jsdom-global/register tests/*.spec.js",
    "test-with-cov": "nyc npm run test"
  },
  "nyc": {
    "extension": [".svelte", ".js"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dreipol/django-cookie-monster.git"
  },
  "keywords": [],
  "author": "Gianluca Guarini <gianluca.guarini@gmail.com> (http://gianlucaguarini.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dreipol/django-cookie-monster/issues"
  },
  "homepage": "https://github.com/dreipol/django-cookie-monster#readme",
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@dreipol/eslint-config": "^6.0.4",
    "@dreipol/stylelint-config": "^5.0.0",
    "@dreipol/stylelint-config-order": "^3.0.0",
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "autoprefixer": "^9.7.4",
    "chai": "^4.2.0",
    "coveralls": "^3.0.9",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "esm": "^3.2.25",
    "jsdom": "^16.0.1",
    "jsdom-global": "^3.0.2",
    "mocha": "^7.0.0",
    "nyc": "^15.0.0",
    "pirates": "^4.0.1",
    "postcss": "^7.0.26",
    "postcss-cli": "^7.1.0",
    "postcss-css-variables": "^0.14.0",
    "postcss-nested": "^4.2.1",
    "rollup": "^1.29.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-svelte": "^5.1.1",
    "rollup-plugin-terser": "^5.2.0",
    "stylelint": "^13.0.0",
    "stylelint-order": "^4.0.0",
    "svelte": "^3.17.1"
  },
  "dependencies": {
    "svelte-i18n": "^2.2.3"
  }
}
