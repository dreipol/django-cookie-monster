.cookie-monster {
    --button-background-color: #ffffff;
    --button-background-hover-color: #e6e6e9;
    --button-background-active-color: #9999a1;
    --accept-button-background-color: #e1e1e1;
    --accept-button-background-hover-color: #f6f6f6;
    --border-radius: 4px;
    --buttons-group-padding: 8px;

    & {
        left: 0;
        bottom: 0;
        width: 100%;
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        padding: 16px;
    }


    .cookie-monster--title,
    .cookie-monster--content {
        max-width: 780px;
        margin: 0 auto;
    }

    .cookie-monster--btn {
        padding: 8px 16px;
        border: none;
        font-size: 1rem;
        background: var(--button-background-color);
        cursor: pointer;
        border-radius: var(--border-radius);
        font-weight: 600;

        &:hover, &:focus {
            background: var(--button-background-hover-color);
        }
    }

    .cookie-monster--btn-group {
        display: flex;
        justify-content: flex-end;
        margin: calc(var(--buttons-group-padding) * -1);
    }

    .cookie-monster--table {
        margin: 16px;
        width: 100%;
        table-layout: fixed;
    }

    .cookie-monster--table-cell {
        padding: 4px 0;
    }

    .cookie-monster--group-description {
        margin: 0;
    }

    .cookie-monster--group-title {
        display: flex;
        align-items: center;
        justify-content: space-between;
        cursor: pointer;
    }

    .cookie-monster--btn-wrapper {
        padding: var(--buttons-group-padding);
    }

    /* facets */

    .cookie-monster--btn {
        &.cookie-monster--btn__active {
            background: var(--button-background-active-color);
        }

        &.cookie-monster--btn__accordion {
            width: 100%;
            text-align: left;
        }

        &.cookie-monster--btn__confirm {
            background: var(--accept-button-background-color);

            &:hover, &:focus {
                background: var(--accept-button-background-hover-color);
            }
        }
    }
}
